datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}


model Post {
    id         String      @id @default(cuid())
    createdAt  DateTime    @default(now())

    content    String      @db.VarChar(255)
    mediaURL   String?
    postDate   DateTime
    platforms  Platform[]

    authorId  String

    @@index([authorId])
}

model Platform {
    id       String           @id @default(cuid())
    name     PlatormEnum      @unique
    posts    Post[]
}

enum PlatormEnum {
  TWITTER
  LINKEDIN
}


